{
  "name": "mfa-terminal",
  "displayName": "MFA Terminal",
  "description": "Terminal layout manager for VS Code/Cursor",
  "version": "0.1.0",
  "publisher": "marcosfeandrade",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcosfeandrade/mfa-terminal"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "terminal",
    "layout",
    "split",
    "workspace",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mfa-terminal.saveLayout",
        "title": "MFA Terminal: Save Current Layout",
        "icon": "$(save)"
      },
      {
        "command": "mfa-terminal.loadLayout",
        "title": "MFA Terminal: Load Layout",
        "icon": "$(folder-opened)"
      },
      {
        "command": "mfa-terminal.listLayouts",
        "title": "MFA Terminal: List Layouts",
        "icon": "$(list-unordered)"
      },
      {
        "command": "mfa-terminal.createLayout",
        "title": "MFA Terminal: Create New Layout",
        "icon": "$(add)"
      },
      {
        "command": "mfa-terminal.editLayout",
        "title": "MFA Terminal: Edit Layout",
        "icon": "$(edit)"
      },
      {
        "command": "mfa-terminal.deleteLayout",
        "title": "MFA Terminal: Delete Layout",
        "icon": "$(trash)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
